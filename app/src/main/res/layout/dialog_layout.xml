<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/heroku_value">

        <RadioButton
            android:id="@+id/heroku_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heroku"/>
        <RadioButton
            android:id="@+id/write_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write url address"/>
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radio_group"
        android:layout_toRightOf="@+id/radio_group"
        android:orientation="horizontal"
        android:weightSum="1" >

        <EditText
            android:id="@+id/edit_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="text"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>